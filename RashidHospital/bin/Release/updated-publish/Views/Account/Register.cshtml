@model RashidHospital.Models.RegisterViewModel
<link href="~/Content/build/css/intlTelInput.min.css" rel="stylesheet" />

@{
    ViewBag.Title = "Register";
}



<style>
    .form-horizontal .control-label {
        text-align: left;
    }
</style>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h2>@ViewBag.Title</h2>

    <div class="container">
        @Html.AntiForgeryToken()
     
            <h4>Create a new account.</h4>
            <h5> @Html.ValidationSummary("", new { @class = "text-danger" })</h5>
            <hr />
           
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FirstName, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Name", @required = "required" } )



                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SecondName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.SecondName, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Name", @required = "required"  })



                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ThirdName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ThirdName, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Name", @required = "required"  })



                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PhoneNumber, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Phone", @required = "required" , @type = "Phone" })



                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Name", @required = "required" ,@type = "email" } )
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Name", @required = "required" } )
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Name", @required = "required" } )
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Role</label>
                    @Html.ListBoxFor(model => model.RolesId, Model.RoleList, new { @class = "form-control multiple-select", @required = "required" })
                    @Html.ValidationMessageFor(m => m.RolesId, null, new { style = "color:red" })

                    <style>
                        #RolesId {
                        width:82%;float:right;
                        }
                    </style>
                </div>
                <div class="form-group" style="float:right;">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-default" value="Register">Register</button>
                        <input type="button" class="btn btn-primary" value="Back" onclick="location.href='@Url.Action("Index", "Account")'" />
                        <button type="reset" class="btn btn-primary" id="btnCancel">Cancel</button>
                    </div>
                </div>
            </div>
}

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

   <script>
        $(document).ready(function () {
            $("#DiseaseId").change(function () {

                $.get("/ChemoTherapyTemplate/GetProrocolList", {
                    DiseaseId: $("#DiseaseId").val()
                }, function (data) {
                    $("#ProtocolId").empty();
                    $.each(data, function (index, item) {
                        $("#ProtocolId").append($("<option>").text(item.Text).val(item.Value))
                    });
                });

            })

        });
    </script>

@model IEnumerable<RashidHospital.Models.ChemoTherapyTemplateVM>


<section class="content-header">
    <h1>ChemoTherapy Protocols</h1>
</section>

<link href="~/Content/dataTables.bootstrap4.css" rel="stylesheet" />


<section class="content">
    <div class="loadingPage" id="loading">
        <i class="fa fa-refresh fa-spin"></i>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">

                <div class="box-header">
                    <h3 class="box-title">
                        <a href="@Url.Action("Create", "ChemoTherapyTemplate")" class="btn btn-primary">
                            Add New Protocol
                            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                        </a>
                    </h3>
                </div>
            </div>
            <h3 class="box-title">
                <a href="@Url.Action("Index", "Package")" class="btn btn-primary">
                    Packages
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                </a>
            </h3>
        </div>

        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Disease</th>
                        <th>Protocol</th>
                        <th>Frequency </th>
                        <th>Cycle Days</th>
                        <th>Maximum cycle allowed</th>
                        <th>Emetogenic Level</th>
                        <th>FN risk</th>
                        <th>Link</th>
                   
                        <th> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        if (item.IsDeleted == true)
                        {
                    <tr style='color:red;text-decoration:line-through'>
                        <td>
                            @Html.DisplayFor(modelItem => item.Disease)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Protocol_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Frequency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cycle_days)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Maximum_cycles)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Emetogenic_Level_Value)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FN_risk)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Link)
                        </td>

                        <td class="adjustContent text-center">
                        </td>
                    </tr>
                        }
                        else
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Disease)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Protocol_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Frequency)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cycle_days)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Maximum_cycles)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Emetogenic_Level_Value)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FN_risk)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Link)
                                </td>


                                <td>

                                    @Html.ActionLink("Open", "Index", "ChemoTherapyDrug", new { templateID = item.Template_ID }, null) |
                                    @Html.ActionLink("Predefined Lab", "Index", "ChemoTherapyPreLab", new { templateID = item.Template_ID }, null) |
                                    @Html.ActionLink("Predefined Investigations", "Index", "ChemoTherapyPreInvestigations", new { templateID = item.Template_ID }, null) |



                                    @Html.ActionLink("Edit", "Edit", new { Id = item.Template_ID }) |
                                    @Html.ActionLink("Duplicate", "Duplicate", new { Id = item.Template_ID }, new { onclick = "return confirm('Are You Sure From Duplicated... ?')" }) |
                
                                    <button onclick="OpenDeleteModal(@item.Template_ID)">Delete</button>
                                   
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
            </table>
        </div>
    </div>
</section>
<div class="modal" id="deactivateModal" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body" style="margin: auto;">
                <input hidden id="AccountId" />
                <img src="~/Content/img/user_disable.png" class="imgStyle" />
                <br />
                <h4 class="text-center">Are you sure you want to Delete this? </h4>
                <p class="text-center text-danger" id="ErrorMsg"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                <button type="button" class="btn btn-primary" id="DeactivateBtn">Yes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

            @section scripts {
                <script src="~/Scripts/jquery.dataTables.js"></script>
                <script src="~/Scripts/dataTables.bootstrap4.js"></script>
                <script src="~/Scripts/intlTelInput.min.js"></script>
                <script>
                    $(function () {
                        $("#loading").fadeOut();
                    });

                    $('#example1').DataTable({
                        "paging": true,
                        "lengthChange": false,
                        "searching": true,
                        "order": [[0, "desc"]],
                        "info": true,
                        "autoWidth": false,
                        "scrollX": true,
                    });



 //delete
            function OpenDeleteModal(AccountId) {
                $("#AccountId").val(AccountId);
                $("#deactivateModal").modal("show");
            };

            $("#DeactivateBtn").click(function () {
                var AccountId = $("#AccountId").val();
                $("#ErrorMsg").html("");
                $("#DeactivateBtn").attr("disabled", true).text('Loading...');
                $.ajax({
                    type: "Post",
                    url: "@Url.Action("Delete", "ChemoTherapyTemplate")",
                    cache: false,
                    data: { Id: AccountId },
                dataType: "json",
                success: function (result) {
                    if (result == 1) {
                        $("#deactivateModal").modal("hide");
                        location.reload();
                    }
                    else if (result == 6) {
                        $("#ErrorMsg").html("An error occurred, please try again ");
                        $("#DeactivateBtn").attr("disabled", false).text('Yes');
                    }
                },
                })
            });



                </script>












            }


@model RashidHospital.Models.LabResualtVM

@{
    ViewBag.Title = "Create";
}
<style>
    .form-control {
        margin-bottom: 4px;
    }
</style>

@using (Html.BeginForm( new { @class = "form-horizontal", role = "form" }))
{
    @Html.Hidden("PatientId", (int)ViewBag.PatientId)

    <div class="modal-body">
      
        <div class="callout callout-success">
            <b>Patient:</b> <span>@ViewBag.PatientInfo</span>
        </div>
        <h5> @Html.ValidationSummary("", new { @class = "text-danger" })</h5>
        <hr />
        <div class="box-body">
            <div class="form-group">
                @Html.Label("TestName", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("LabType", new SelectList(ViewBag.LabTypesList, "Value", "Text"), htmlAttributes: new { @class = "form-control select2" })
                    @Html.ValidationMessageFor(model => model.LabType, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Result", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Unit", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Unit, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                </div>
            </div>

            <div class="form-group" style="float:right;">
                <div class="col-md-12">
                
                    <button type="button" value="Create" class="btn btn-default" id="AddResult">add more</button>
                    <input type="button" class="btn btn-info" value="Close" onclick="location.href='@Url.Action("Index", "LabResualt",new { @PatientId = (int)ViewBag.PatientId})'" />
                    <button type="reset" class="btn btn-primary" id="btnCancel">Cancel</button>

                </div>
            </div>
        </div>
    </div>
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {
        $(".seslct2").select2({
        tags: true,
        dropdownParent: $('#CreateModel')
        });
    });
</script>


<section class="content">








    <div class="box-header">
        <h3 class="box-title">
            <a href="@Url.Action("NCreate", "ChemoTherapyCyclePackage", new {Id = ViewBag.CycleId ,pid = ViewBag.PatientId } )" class="btn btn-primary">
                Create new Nurse Note
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            </a>
        </h3>
    </div>
    <hr />
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Temperature</th>
                    <th>Pulse</th>
                    <th>BP</th>
                    <th>Weight</th>
                    <th>Height</th>
                    <th>SA</th>
                    <th>Date</th>

                    <th class="text-center" width="110px">Select</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="adjustContent">@item.Temperature</td>
                        <td class="adjustContent">@item.Pulse</td>
                        <td class="adjustContent">@item.BP</td>
                        <td class="adjustContent">@item.Weight</td>
                        <td class="adjustContent">@item.Height</td>
                        <td class="adjustContent">@item.SA</td>
                        <td class="adjustContent">@item.Date</td>

                        <td class="adjustContent text-center">

                            <a class="btn btn-success adjust-actions" title="Select" href="/PatientDose/Test?NoteId=@item.ID&CycleId=@ViewBag.CycleId&pid=@ViewBag.PatientId">
                                <i class="fa fa-check"></i>
                            </a>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>

</section>


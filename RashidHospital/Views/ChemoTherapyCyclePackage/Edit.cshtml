@model IEnumerable<RashidHospital.Models.ChemoTherapyCyclePackageVM>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ChemoTherapyCyclePackageVM</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       

        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>

                        <th>Lab</th>
                        <th>Value</th>
                        <th>Actual Value</th>
                        <th>Rule</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Test_TypeValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Test_Value)
                            </td>
                            <td>

                                <div class="col-md-10">

                                    @Html.EditorFor(modelItem => item.Actual_Value, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(modelItem => item.Actual_Value, "", new { @class = "text-danger" })


                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rule_TypeValue)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { Id = item.ID, pid = ViewBag.PatientId }) |

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {

    <script src="~/Scripts/jquery.dataTables.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.js"></script>
    <script src="~/Scripts/intlTelInput.min.js"></script>



    <script>
        function openCreatelModal(Id) {
            window.location.href = '/ChemoTherapyCyclePackage/Create?Id=' + Id;
        };
        function openCreateModel(Id) {
    $.fn.modal.Constructor.prototype.enforceFocus = function () { };
    $.ajax({
    type: "GET",
    url: "@Url.Action("Create", "ChemoTherapyCyclePackage")",
    cache: false,
        data: { Id: Id },
    success: function (result) {
    if (result.IsRedirect) {
    window.location.href = result.RedirectUrl;
    }
    else {
    $("#CreateBody").html(result.Content);
    $("#CreateModel").modal("show")
    }
    },
    error: function (result) {
    window.location.href = '@Url.Action("Error404", "Home")';
    },
    })
        }



        function openNurseNoteModal(cycleID , patientID) {
            window.location.href = '/ChemoTherapyCyclePackage/Investigation?Id=' + cycleID + '&pid=' + patientID;
        }

        function openAddLabModal(cycleID, patientID) {
            window.location.href = '/ChemoTherapyCyclePackage/Test?Id=' + cycleID + '&pid=' + patientID;
        }
    </script>
}

<div class="box-body">
    <table id="example1" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>

                <th>Lab</th>
                <th>Value</th>
                <th>Actual Value</th>
                <th>Rule</th>
               
              
              
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Item2)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Test_TypeValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Test_Value)

                </td>
                <td>

                    <div class="col-md-10">

                        @Html.EditorFor(modelItem => item.Actual_Value, new { htmlAttributes = new { @class = "form-control",  } })
                        @{
                            if (item.Rule_Type == 1)
                            {
                                if (item.Actual_Value <= item.Test_Value)
                                {
                                    @Html.ValidationMessageFor(modelItem => item.Actual_Value, "Warning: Input is not in normal range", new { @class = "text-danger" })

                                }
                            }



                            if (item.Rule_Type == 2)
                            {
                                if (item.Actual_Value >= item.Test_Value)
                                {
                                    @Html.ValidationMessageFor(modelItem => item.Actual_Value, "Warning: Input is not in normal range", new { @class = "text-danger" })

                                }
                            }


                            if (item.Rule_Type == 3)
                            {
                                if (item.Actual_Value < item.Test_Value)
                                {
                                    @Html.ValidationMessageFor(modelItem => item.Actual_Value, "Warning: Input is not in normal range", new { @class = "text-danger" })

                                }
                            }


                            if (item.Rule_Type == 4)
                            {
                                if (item.Actual_Value > item.Test_Value)
                                {
                                    @Html.ValidationMessageFor(modelItem => item.Actual_Value, "Warning: Input is not in normal range", new { @class = "text-danger" })

                                }
                            }



                        }
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rule_TypeValue)
                </td>
              

              
            </tr>
            }

        </tbody>
    </table>
</div>

@model IEnumerable<RashidHospital.Models.OrderDetailVM>

@{
    ViewBag.Title = "index";
}

<link href="~/Content/dataTables.bootstrap4.css" rel="stylesheet" />
<style>
       .columns{
    float: left;
    position: relative;
    margin-right: 41px;
    background-color: azure;
    padding-right: 59px;
  column-count: 2;
  width:1000px;
}
    
</style>
<section class="content-header">
    @Html.Raw(ViewBag.PatientInfo)
</section>

<section class="content">
    
    <div class="loadingPage" id="loading">
        <i class="fa fa-refresh fa-spin"></i>
    </div>
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
               
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Lab Request</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="adjustContent">@item.TypeValue</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <br />
                <div class="text-info text-justify">
                    @ViewBag.Note
                </div>
            </div>
            <button value="Print" class="btn btn-primary" onclick="window.print();">Print</button>
            <input type="button" class="btn btn-info" value="Back" onclick="location.href='@Url.Action("Index", "LabRequest",new { @PatientId = (int)ViewBag.PatientId})'" />

        </div>
    </div>
</section>


  
@section scripts {
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.js"></script>
    <script src="~/Scripts/intlTelInput.min.js"></script>
<script>
		$(function () {
	    	$("#loading").fadeOut();
		});

		$('#example1').DataTable({
		    "paging": true,
		    "lengthChange": false,
		    "searching": true,
		    "ordering": true,
		    "info": true,
		    "autoWidth": false,
		    "scrollX": true,
		});


</script>
}